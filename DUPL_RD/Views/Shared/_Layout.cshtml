<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DUPL R & D</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-expand-md navbar-dark fixed-top shadow-sm border-bottom " style="background-color:mediumpurple">
        <div class="container ">
            <a class="navbar-brand" href="/">

                @Html.ActionLink("DUPL R & D", "Index", "Home", new { }, new { @class = "navbar-brand " })
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(" Home", "Index", "Home", new { }, new { @class = "btn btn-outline-success shadow nav-link" })</li>

                    <li>@Html.ActionLink(" About", "About", "Home", new { }, new { @class = "btn btn-outline-success shadow nav-link" })</li>

                    <li>@Html.ActionLink(" Books", "Index", "Books", new { }, new { @class = "btn btn-outline-success shadow nav-link" })</li>

                    <li>@Html.ActionLink(" BookList", "BookList", "Home", new { }, new { @class = "btn btn-outline-success shadow nav-link" })</li>

                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="fixed-bottom text-center bg-light shadow">
            <p>&copy; @DateTime.Now.Year - Md Faruk Hossain</p>
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.js"></script>

    @RenderSection("scripts", false)
</body>
</html>
